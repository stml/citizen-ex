{
  "manifest_version": 2,
  "name": "Citizen Ex",
  "short_name": "Citizen Ex",
  "version": "1.1",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["lib/JSON.prune.js", "lib/URI.js", "lib/moment.js", "lib/underscore.js", "background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Citizen Ex",
    "default_icon": "icon64.png"
  },
  "options_page": "page/page.html",
  "web_accessible_resources": [
    "flags/*.svg",
    "images/*",
    "page/page.html",
    "panel/*",
    "*.png"
  	],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "css": ["panel/panel.css"],
      "js": [
        "lib/underscore.js",
        "lib/jquery.js",
        "lib/backbone.js",
        "lib/moment.js",
        "lib/mapbox.js",
        "panel/panel.js"
      ]
    }
  ]
}
