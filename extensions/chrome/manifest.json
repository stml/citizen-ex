{
  "manifest_version": 2,
  "name": "Citizen Ex",
  "version": "0.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["lib/JSON.prune.js", "lib/URI.js", "lib/underscore.js", "background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png"
  },
  "browser_action": {
    "default_title": "Citizen Ex",
    "default_icon": "icon16.png"
  },
  "web_accessible_resources": [
    "flags/*.svg",
    "leaflet-images/*",
    "images/*"
  	],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "css": [
      	"injected/browserAction.css",
      	"lib/leaflet.css"
      	],
      "js": [
        "lib/underscore.js",
        "lib/jquery.js",
        "lib/backbone.js",
        "lib/moment.js",
        "lib/leaflet.js",
        "injected/setup.js"
      ]
    }
  ]
}
